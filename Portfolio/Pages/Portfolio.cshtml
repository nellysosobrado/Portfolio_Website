@page
@model PortfolioModel

<h2>Min Portfolio</h2>

<div class="project-grid">
    @foreach (var project in Model.Projects)
    {
        <div class="project-card">
            <h3>@project.Name</h3>
            <p><strong>Teknik:</strong> @project.TechStack</p>
            <p>@project.Description</p>
            <p><a href="@project.GithubUrl" target="_blank">GitHub</a></p>
            @if (!string.IsNullOrWhiteSpace(project.LiveDemoUrl))
            {
                <p><a href="@project.LiveDemoUrl" target="_blank">Live Demo</a></p>
            }
        </div>
    }
</div>

<style>
    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1rem;
        margin-top: 2rem;
    }

    .project-card {
        background-color: #f5f5f5;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .project-card h3 {
        margin-top: 0;
    }
</style>
