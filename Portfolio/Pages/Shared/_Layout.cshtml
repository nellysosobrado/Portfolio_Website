
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nylegna Kir Sosobrado</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
</head>
<body id="top">
    <nav>
        <div class="nav-content">
            <div class="logo">
                <a href="#top">Nylegna Kir Sosobrado</a>
            </div>

            <ul class="nav-links">
                <li><a href="#portfolio-api" class="nav-link">Portfolio</a></li>
                <li><a href="~/images/CV_NylegnaKir_Sosobrado.pdf" download class="nav-link">Download my CV</a></li>
                <li><a href="https://github.com/nellysosobrado" target="_blank"><i class="bi bi-github"></i></a></li>
                <li><a href="https://linkedin.com/in/nylegnakir" target="_blank"><i class="bi bi-linkedin"></i></a></li>
                <li>
                    <a href="javascript:void(0)" onclick="copyEmailToClipboard()" title="Click to copy email" aria-label="Copy email to clipboard">
                        <i class="bi bi-envelope"></i>
                    </a>
                </li>
                <li class="nav-link weather-info">
                    @await Component.InvokeAsync("Weather")
                </li>

            </ul>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="footer-content">
            <p>&copy; @DateTime.Now.Year Nylegna Kir Sosobrado. All rights reserved.</p>
            <div class="footer-links">
                <a href="https://github.com/nellysosobrado" target="_blank"><i class="bi bi-github"></i></a>
                <a href="https://linkedin.com/in/nylegnakir" target="_blank"><i class="bi bi-linkedin"></i></a>
                <a href="javascript:void(0)" onclick="copyEmailToClipboard()" title="Click to copy email" aria-label="Copy email to clipboard">
                    <i class="bi bi-envelope"></i>
                </a>
            </div>
        </div>
    </footer>
    <button id="scrollToTopBtn" title="Back to top">
    <i class="fas fa-arrow-up"></i>
</button>


    <script src="~/js/script.js"></script>
    <script src="~/js/projects.js"></script>
    <script src="~/js/scrollToTop.js"></script>
    @* <script type="module" src="~/js/contact.js"></script> *@


    <script>
        document.getElementById("toggle-projects")?.addEventListener("click", function () {
            const list = document.querySelector(".project-list");
            list.classList.toggle("collapsed");
            this.textContent = list.classList.contains("collapsed") ? "Show more" : "Show less";
        });
    </script>


    @RenderSection("Scripts", required: false)

</body>
</html>
