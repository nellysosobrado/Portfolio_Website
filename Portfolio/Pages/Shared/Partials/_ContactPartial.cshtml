<form method="post" action="/Contact" class="contact-form">
    <input name="Name" placeholder="Ditt namn" required />
    <input name="Email" type="email" placeholder="E-post" required />
    <textarea name="Message" placeholder="Meddelande..." required></textarea>
    <button type="submit">Skicka</button>
</form>

@if (TempData["Feedback"] is string msg)
{
    <p style="text-align:center; color:green;">@msg</p>
}
