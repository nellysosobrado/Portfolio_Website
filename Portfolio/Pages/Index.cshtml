@page
@model Portfolio.Pages.IndexModel
@{
    ViewData["Title"] = "Start";
    Layout = "_Layout";
}

<!-- Hero Section -->
<section id="hero">
    @await Html.PartialAsync("Partials/_HeroPartial")
</section>

<!-- About Me Section -->
<section id="about-me">
    @if (Model.Projects != null)
    {
        @await Html.PartialAsync("Partials/_AboutPartial", Model.Projects)
    }
</section>

<!-- Projects Portfolio Section -->
<section id="portfolio-api">
    @if (Model.Projects != null)
    {
        @await Html.PartialAsync("Partials/_ProjectListPartial", Model.Projects)
    }
</section>

<!-- Contact Form Section -->
<section id="kontakt">
    @await Html.PartialAsync("Partials/_ContactPartial", new Portfolio.Models.ContactFormViewModel())
</section>

<!-- Animation on scroll -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init();
</script>
