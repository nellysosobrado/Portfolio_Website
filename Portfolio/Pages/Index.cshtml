@* Projects Portfolio Display (WITH API+ SQL) *@
<section id="portfolio-api">
    @await Html.PartialAsync("_ProjectListPartial", Model.Projects)
</section>


<section id="kontakt" class="about-section contact-section">
    <div class="about-wrapper">
        <div class="about-heading">
            <i class="bi bi-envelope-fill"></i>
        </div>

        <h2 class="section-title">Kontakta mig</h2>
        <p class="section-subtitle">Fyll i formuläret om du vill komma i kontakt med mig.</p>

        <form method="post" class="contact-form">
            <div class="form-group">
                <input type="text" name="name" placeholder="Ditt namn" required />
            </div>
            <div class="form-group">
                <input type="email" name="email" placeholder="Din e-postadress" required />
            </div>
            <div class="form-group">
                <textarea name="message" placeholder="Skriv ditt meddelande här..." rows="5" required></textarea>
            </div>
            <button type="submit" class="cta-button">Skicka</button>
        </form>
    </div>
</section>


