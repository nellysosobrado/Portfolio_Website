@page
@model IndexModel
@{
    ViewData["Title"] = "Start";
}

<header class="hero" id="hem">
    <div class="hero-content">
        <img src="~/images/Nelly.jpg" alt="Portrait of Nylegna Kir Sosobrado" class="profile-image">
        <h1>Nylegna Kir Sosobrado</h1>
        <p>.NET Developer Student <br /> at KYH Liljeholmen</p>
        <div class="hero-description">
            <p>Based in Sweden, Huddinge</p>
        </div>
        <div class="social-links">
            <a href="https://github.com/nellysosobrado" class="social-icon" aria-label="GitHub"><i class="bi bi-github"></i></a>
            <a href="https://www.linkedin.com/in/nylegnakir/" class="social-icon" aria-label="LinkedIn"><i class="bi bi-linkedin"></i></a>
        </div>
        <div class="hero-buttons">
            <a href="~/images/CV_NylegnaKir_Sosobrado.pdf" download class="cta-button secondary">Download my CV</a>
            <a href="#projekt" class="cta-button secondary">My Projects</a>
            <a href="#kontakt" class="cta-button secondary">Contact Me</a>
        </div>
    </div>
</header>

<section id="about" class="about-content improved-about">
    <div class="about-container">
        <div class="about-text">
            <h2>About Me</h2>
            <p>
                I'm <strong>Nylegna Kir Sosobrado</strong>, a passionate and detail-oriented .NET Developer Student based in Huddinge, Sweden.
                <br /><br />
                I thrive on solving problems with clean, maintainable code and enjoy transforming ideas into fully functional applications.
                I’m currently studying at KYH Liljeholmen and constantly exploring new technologies within the Microsoft ecosystem and modern web.
                <br /><br />
                I’m driven, curious, and ready to contribute to real-world projects through internships or junior developer roles.
            </p>
        </div>
        <div class="about-photo">
            <img src="~/Images/Nelly.jpg" alt="Nylegna Kir Sosobrado" />
        </div>
    </div>
</section>

<main>


    <!-- Skills Carousel -->
    <section id="skills" class="skills-carousel-section">
        <h2 class="cv-header">My Skills</h2>
        <div class="carousel-wrapper">
            <div class="skills-carousel" id="skills-carousel">
                <div class="carousel-item"><h4>C# / .NET</h4></div>
                <div class="carousel-item"><h4>Razor Pages / MVC</h4></div>
                <div class="carousel-item"><h4>Entity Framework Core</h4></div>
                <div class="carousel-item"><h4>HTML / CSS / JS</h4></div>
                <div class="carousel-item"><h4>SQL</h4></div>
                <div class="carousel-item"><h4>Git & GitHub</h4></div>
            </div>
        </div>
    </section>


    <!-- Projects -->
    <section id="projekt" class="projects">
        <h2>Project Gallery</h2>
        <div class="gallery-grid">
            <div class="gallery-item">
                <img src="~/images/CashierApp.png" alt="CashierApp" />
                <div class="gallery-overlay">
                    <h3>Cashier console application</h3>
                    <p>A simple console-based checkout system with campaigns, receipts and JSON persistence.</p>
                    <a href="https://github.com/nellysosobrado/CashierApp" target="_blank" class="project-link">See details</a>
                </div>
            </div>
            <div class="gallery-item">
                <img src="~/images/HotelBookingApp.png" alt="HotelBookingApp" />
                <div class="gallery-overlay">
                    <h3>Hotelbooking console application</h3>
                    <p>Manages guests, bookings, payments – built using EF Core and FluentValidation.</p>
                    <a href="https://github.com/nellysosobrado/HotelBookingApp" target="_blank" class="project-link">See details</a>
                </div>
            </div>
        </div>
    </section>

    <!-- References -->
    <section id="referenser" class="cv-section">
        <div class="cv-container">
            <h2 class="cv-header">References</h2>
            <div class="cv-grid">
                <div class="cv-box">
                    <h3>Teacher Reference</h3>
                    <div class="cv-item">
                        <h4>Maria Andersson</h4>
                        <span class="role">Instructor, KYH</span><br />
                        <span class="date">2024</span>
                        <p>“Nylegna is a highly motivated student with strong technical skills and great potential.”</p>
                    </div>
                </div>
                <div class="cv-box">
                    <h3>Peer Reference</h3>
                    <div class="cv-item">
                        <h4>Alex Karlsson</h4>
                        <span class="role">Classmate</span><br />
                        <span class="date">2024</span>
                        <p>“Great team player, problem solver and always willing to help others.”</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact -->
    <section id="kontakt" class="contact">
        <h2>Contact Me</h2>
        <form id="contact-form">
            <div class="form-group">
                <input type="text" name="name" placeholder="Your name" required />
            </div>
            <div class="form-group">
                <input type="email" name="email" placeholder="Your email" required />
            </div>
            <div class="form-group">
                <textarea name="message" rows="5" placeholder="Your message" required></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="cta-button primary">Send</button>
            </div>
        </form>
    </section>
</main>

<!-- Footer -->
<footer>
    <p>&copy; @DateTime.Now.Year Nylegna Kir Sosobrado. All rights reserved.</p>
</footer>
